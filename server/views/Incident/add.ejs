<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Employee Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter your Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Incident Date</label>
                    <input type="text" class="form-control" id="dateTextField" placeholder="Enter the Incident Date" name="Date" required>
                </div>
                <div class="form-group">
                    <label for="locationTextField">Incident Location</label>
                    <input type="text" class="form-control" id="locationTextField" placeholder="Enter the Location of the Incident" name="Location" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Incident Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the Incident Description" name="Description" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <a href="/incidentslist" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>   
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>